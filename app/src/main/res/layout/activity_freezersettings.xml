<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="phuong.example.com.androidproject.FreezerSettingActivity">
  <TextView
      android:id="@+id/freezer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/Base.TextAppearance.AppCompat.Title"/>
  <View android:layout_width="match_parent" android:layout_height="3dp"
      android:background="@color/colorPrimaryDark"
      android:padding="5dp"></View>
  <TextView
      android:id="@+id/currntFreezerTemp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="16dp"
      android:text="Current Temperature"
      style="@style/Base.TextAppearance.AppCompat.Caption"/>

  <TextView
      android:id="@+id/initFreezerTemp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/initial_freezer_temp"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:textColor="@color/colorPrimaryDark"
      style="@style/Base.TextAppearance.AppCompat.Display4"/>
  <LinearLayout android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="6dp"
        android:text="Tempeature"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Body1"/>

    <Spinner
        android:id="@+id/spinnerTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"/>
  </LinearLayout>
  <Button
      android:id="@+id/btnSetTemp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:padding="16dp"
      android:text="@string/set_temp"
      style="@style/Widget.AppCompat.Button.Colored"/>

</LinearLayout>
